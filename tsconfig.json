{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "types": [],
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ]
}
